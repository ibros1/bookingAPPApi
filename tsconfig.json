// tsconfig.json

{
  "compilerOptions": {
    // 1. MUST be set to a modern target (ES2022 or higher is best practice)
    "target": "ES2022",

    // 2. Set module and moduleResolution to NodeNext or Node20
    // This tells TypeScript how to resolve imports/exports in a modern Node environment.
    // It enables Top-Level await and handles CJS/ESM interop better.
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Keep your existing settings
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,

    // Crucial for allowing CJS to talk to ESM packages like Baileys
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "constants/**/*",
    "messaging/**/*",
    "middleWare/**/*",
    "types/**/*"
  ]
}
